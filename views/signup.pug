extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Signup to create an account
            form.form.form--signup
                .form__group
                    label.form__label(for='name') Name
                    input#name-signup.form__input(type='text' placeholder='Jhone Doe', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email-signup.form__input(type='email' placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password-signup.form__input(type='password' placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='passwordConfirm') Password
                    input#passwordConfirm-signup.form__input(type='password' placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green(type='submit') Login